---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteFooter from '../components/SiteFooter.astro';
import { SiteHeader } from '../components/SiteHeader';
import { ContactForm } from '../components/ContactForm';
---

<BaseLayout title="Contact â€” Corey Hendrickson Productions" description="Get in touch with Corey Hendrickson Productions for film production, documentary, brand films, and video projects in Vermont and New England.">
  <SiteHeader client:load />
  <div class="relative w-full overflow-hidden" style="aspect-ratio: 2.35 / 1;">
    <img src="/images/Camden_MaineBTS_0007.jpg" alt="Camden, Maine behind the scenes" class="absolute inset-0 h-full w-full object-cover object-[center_30%]" loading="eager" />
    <div class="absolute inset-0 bg-black/40"></div>
    <div class="absolute inset-0 flex flex-col justify-center px-6 md:px-10">
      <div class="mx-auto max-w-2xl w-full">
        <h1 class="text-3xl font-medium tracking-tight text-white md:text-4xl lg:text-5xl text-balance">
          Get in Touch
        </h1>
        <p class="mt-4 text-sm leading-relaxed text-white/80 md:text-base">
          Have a project in mind or just want to say hello? Fill out the form
          below and we will get back to you as soon as possible.
        </p>
      </div>
    </div>
  </div>

  <main class="px-6 pt-12 pb-24 md:px-10">
    <div class="mx-auto max-w-2xl">
      <ContactForm client:visible />

      <div class="mt-20 border-t border-border pt-12">
        <div class="grid gap-10 md:grid-cols-2">
          <div>
            <h2 class="text-xs font-medium uppercase tracking-widest text-muted-foreground">
              Email
            </h2>
            <a
              href="mailto:studio@coreyhendrickson.com"
              class="mt-2 block text-foreground transition-opacity hover:opacity-60"
            >
              studio@coreyhendrickson.com
            </a>
          </div>
          <div>
            <h2 class="text-xs font-medium uppercase tracking-widest text-muted-foreground">
              Based in
            </h2>
            <p class="mt-2 text-foreground">Middlebury, Vermont</p>
          </div>
        </div>
      </div>
    </div>
  </main>
  <SiteFooter />
</BaseLayout>
